<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background0"
    tools:context=".fragments.CreateAccountFragment"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cat_dog_ic"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME PAWEET HOME"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:fontFamily="SeoulHangang CB"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="SeoulHangang CB"
        android:textAlignment="center"
        android:text="Login to your account"
        android:layout_margin="8px"
        android:layout_marginBottom="12px"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/text_box"
        android:hint="email"
        android:textColorHint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/text_box"
        android:hint="password"
        android:textColorHint="@color/colorPrimary"
        />


    <TextView
        android:id="@+id/forgotLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:background="@drawable/login_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:id="@+id/loginWithGoogleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:textStyle="bold"
        android:background="@drawable/login_btn"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/toRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t have an account? Register"
        android:textColor="@color/colorPrimary"
        android:onClick="onRegisterText"
        />

</LinearLayout>