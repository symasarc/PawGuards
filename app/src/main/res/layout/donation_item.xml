<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_box"
        android:orientation="horizontal">


    <!-- Campaign Image -->
    <ImageView
        android:id="@+id/imageCampaign"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat_dog_ic"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_gravity="center" />

    <!-- Campaign Information -->
    <LinearLayout
        android:id="@+id/linearCampaignInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCampaignTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save the Puppies"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/textCampaignDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help us rescue and care for puppies in need."
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textAmountRaised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raised Amount: $5000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Add Goal Amount TextView -->
            <TextView
                android:id="@+id/textGoalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Goal: $10000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonDonateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate Now"
            android:textSize="22dp"
            android:paddingRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="32dp"
            android:textStyle="bold"
            android:background="@drawable/edit_button"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
